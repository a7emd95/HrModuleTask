@model List<GetJobPositionModel>
@{
    ViewData["Title"] = "GetAllPosition";
}
<table class="table align-middle">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Is Active</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i < Model.Count; i++)
        {

            <tr>
                <th scope="row">@i</th>
                <td>@Model[i].Title</td>
                <td>@Model[i].IsActive</td>
                <td>
                    <a asp-controller="Admin" asp-action="DeletePosition"
                       asp-route-id="@Model[i].PublicID" type="button" class="btn btn-danger btn-sm px-3">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Admin" asp-action="CreateJobPosition"
    type="button" class="btn btn-info btn-sm px-3">
    Create job position
</a>
