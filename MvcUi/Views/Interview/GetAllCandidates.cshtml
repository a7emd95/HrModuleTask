@model List<Core.Models.Candidate.GetCandidateModel>
@{
    ViewData["Title"] = "GetAllCandidates";
}

<h1>Candidates List</h1>

<table class="table align-middle">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Candidate Name</th>
            <th scope="col">Canidate Email</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {

        <tr>
            <th scope="row">@(i+1)</th>
            <td>@Model[i].Name</td>
            <td>@Model[i].Email</td>
            
            <td>
                <a asp-controller="Interview" asp-action="DeleteCandidate" asp-route-id="@Model[i].ID"
                   type="button" class="btn btn-danger btn-sm px-3">
                    Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="Interview" asp-action="CreateCandidate"
   type="button" class="btn btn-info btn-sm px-3">
    Add Candidate
</a>
